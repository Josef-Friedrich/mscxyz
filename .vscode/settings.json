{
  "files.exclude": {
    "**/__pycache__/": true,
    "**/.mypy_cache/": true,
    "**/.pytest_cache/": true,
    "**/.tox/": true,
    "**/*.egg-info": true,
    "**/*.py[cod]": true,
    "**/dist/": true,
    "**/doc/html/": true,
    "**/docs/_build/": true,
    "**/MANIFEST": true,
    "**/nosetests.xml": true
  },
  "python.defaultInterpreterPath": ".venv/bin/python",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "--capture=tee-sys",
    "-vv",
    "--rootdir",
    "${workspaceFolder}/tests"
  ]
}